<h1>Workout Log</h1>

<%= render 'new' %>

<hr style='' />

<table>
  <tr>
    <th><%= link_to "Tempo", :sort => "period" %></th>
    <th><%= link_to "Nome", :sort => "title"%></th>
    <th><%= link_to "Data", :sort => "morning"%></th>
    <th></th>
  </tr>

  <% @events.each do |event| %>
    <tr>
        <td><%= event.period %>h</td>
        <td><%= event.title %></td>
        <td><%= event.morning.strftime("%d/%m/%Y") %></td>
        <td><%= button_to 'delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>


</br>
</br>
<h2><%= @events.sum('period') %> hous of exercices</h2>

